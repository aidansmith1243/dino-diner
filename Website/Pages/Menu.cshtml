@page
@model Website.Pages.MenuModel
@{
    ViewData["Title"] = "Menu";
}
<div class="container">
    <div class="menu-items">
        <h1>Menu</h1>
        <h2>Combos</h2>
        <div class="combo-items">
            @foreach (DinoDiner.Menu.IMenuItem m in Model.menu.AvailableCombos)
            {
                <div class="menu-item">
                    <div class="name">
                        <a>@m.ToString()</a>
                    </div>
                    <div class="small-price">
                        <a>@(String.Format("{0:C}", Convert.ToInt32(m.Price)))</a>
                    </div>
                    <div class="small-calories">
                        <a>@m.Calories</a>
                    </div>
                    @if (m is DinoDiner.Menu.CretaceousCombo c)
                    {
                        c.Size = DinoDiner.Menu.Size.Medium;
                        <div class="medium-price">
                            <a>@(String.Format("{0:C}", Convert.ToInt32(m.Price)))</a>
                        </div>
                        <div class="medium-calories">
                            <a>@m.Calories</a>
                        </div>
                        c.Size = DinoDiner.Menu.Size.Large;
                        <div class="large-price">
                            <a>@(String.Format("{0:C}", Convert.ToInt32(m.Price)))</a>
                        </div>
                        <div class="large-calories">
                            <a>@m.Calories</a>
                        </div>
                    }
                    <div class="ingredients">
                        <a>@Model.GetIngredients(m)</a>
                    </div>
                </div>
                <br />
            }
        </div>
        <h2>Entrees</h2>
        <div class="entree-items">
            @foreach (DinoDiner.Menu.IMenuItem m in Model.menu.AvailableEntrees)
